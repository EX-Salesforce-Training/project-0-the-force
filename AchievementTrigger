//Trigger for Achievement object
trigger AchievementTrigger on Achievement__c (before insert) {
switch on trigger.operationType{
        
    	//Call the method to check for existing achievemnts before inserts
    	when BEFORE_INSERT{
            AchievementTriggerHandler.checkForExisting(trigger.new);
        }
       /* when BEFORE_UPDATE{
            
