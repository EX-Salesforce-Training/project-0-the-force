public class ItemEditAuthorizationHandler {
    public void beforeUpdateMethod(List<item__c> items){
         for(Item__c item : items){
           
            if(item.Edit_Info_Authorized__c == false){
            
            item.addError('Not Authorized to Edit - Seek Permission From Accounts Team');
            }
        }
    }
}
//this is a fairly simple trigger designed to serve as a check on unauthorized 
//editing of accounts
//it takes in a list of my type Item__c, sees if the authorization checkbox is checked via a for loop
//then if it finds that that is not the case it throws an error
